<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('layouts/head') %>
</head>
    <body>
      <%- include('layouts/header') %>
        <!-- Latest compiled and minified Bootstrap 5 JavaScript -->
    </body>
</html>
<form method="post" action="/items/add" enctype="multipart/form-data">
  <fieldset>
    <legend>Feature Image</legend>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <input
            class="form-control"
            id="featureImage"
            name="featureImage"
            type="file"
          />
        </div>
      </div>
    </div>
  </fieldset>
  <br />
  <fieldset>
    <legend>Post Content</legend>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="title">Item Name:</label>
          <input class="form-control" id="title" name="title" type="text" />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="price">Price:</label>
          <input class="form-control" id="price" name="price" type="text" />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="body">Description:</label>
          <textarea
            class="form-control"
            id="body"
            name="body"
            rows="15"
          ></textarea>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="category" class="form-label">Category:</label>
          <% if (categories && categories.length > 0) { %>
              <select class="form-select" id="category" name="category" required>
                  <option value="">Select Category</option>
                  <% categories.forEach(function(category) { %>
                      <option value="<%= category.id %>"><%= category.category %></option>
                  <% }); %>
              </select>
          <% } else { %>
              <div class="alert alert-warning">No categories available</div>
          <% } %>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="category">Visibility:</label>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="published" id="published" />
              Published
            </label>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
  <hr />
  <input
    type="submit"
    class="btn btn-primary pull-right"
    value="Add Post"
  /><br /><br /><br />
</form>
